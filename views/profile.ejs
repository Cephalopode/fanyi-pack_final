<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>My Profile</title>
	<% include partials/template/head.ejs %>

	<style>
		body 		{ word-wrap:break-word; }
	</style>
</head>
<body>
<% include partials/template/header.ejs %>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
        <didv class="row">
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Info</h3>

					<p>
						<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                        <% for(i=0;i<4;i++) {%>
                        <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                        <% }%><br>
						<strong>email</strong>: <%= user.local.email %><br>
						<strong>native language</strong>: <%= user.local.nativeLanguage %><br>
						<strong>other language</strong>: <%= user.local.otherLanguage %>
					</p>

			</div>
		</div>
            <div class="col-sm-6">
                <div class="well">
                    <h3><span class="fa fa-edit"></span> Essay</h3>

                    <a id="init" onclick="dispEdit()"><span class="fa fa-plus"></span> Introduce yourself a bit...</a>

                    <div id="edit" style="visibility: hidden">
                        <form action="/profile" method="post">
                            <textarea class="form-control" id="introduce" name="introduce" rows="5" placeholder="Write something about yourself..."></textarea>
                            <br><button type="submit" class="btn btn-default btn-sm pull-right">Save</button>
                            <a onclick="dispInit()" class="btn btn-default btn-sm pull-right">Cancel</a><br>
                        </form>
                    </div>
                    <p id="saved" style="visibility:visible">Text : <%= user.local.introduce %></p>

                </div>
            </div>

        </didv>

	</div>
    <script>
        function dispInit() {
            document.getElementById("init").style.visibility = "visible"
            document.getElementById("edit").style.visibility = "hidden"
        }
        function dispEdit() {
            document.getElementById("init").style.visibility = "hidden"
            document.getElementById("edit").style.visibility = "visible"
        }
        function dispSaved() {
            document.getElementById("init").style.visibility = "hidden"
            document.getElementById("edit").style.visibility = "visible"
        }
    </script>

</div>
</body>
</html>
